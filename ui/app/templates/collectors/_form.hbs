<form class="form-horizontal">
  <div class="form-group">
    <label for="hgMetric" class="col-sm-2 control-label">Source</label>
    <div class="col-sm-7">
      {{input type="text" value=hgMetric classNames="form-control" id="hgMetric" placeholder="Graphite metric: some.value, integral(some.value:sum) or any other graphite function"}}
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">SnowmanIO Metric</div>
    <div class="panel-body">

     <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              {{input type="checkbox" checked=isMetricNameAutogenerated}} Autogenerated name
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="metricName" class="col-sm-2 control-label">Metric Name</label>
        <div class="col-sm-7">
          {{input type="text" value=metricName disabled=isMetricNameAutogenerated classNames="form-control" id="metricName"}}
        </div>
      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-7">
      <button type="submit" class="btn btn-primary" {{bind-attr disabled=inProgress}} {{action "save"}}>Save</button>
    </div>
  </div>
</form>
