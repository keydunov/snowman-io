<div class="row-fluid text-right">
  {{#link-to "apps.new" class="btn btn-default"}}Register App{{/link-to}}
</div>

<div class="row-fluid dashboard">
  {{#each app in model}}
    <div class="col-md-3 app-slot">
      <h4>
        {{#link-to "apps.show.info" app.id}}{{app.name}}{{/link-to}}
      </h4>
      <table class="table table-striped">
        <tbody>
          <tr>
            <th colspan="2">Requests</th>
          </tr>
          <tr>
            <td>
              <b>Today</b><br>
              {{#if app.requests.today}}{{app.requests.today.count}}{{else}}-{{/if}}
            </td>
            <td class="yesterday">
              <b>Yesterday</b><br>
              {{#if app.requests.yesterday}}{{app.requests.yesterday.count}}{{else}}-{{/if}}
            </td>
          </tr>
          <tr>
            <td colspan="2">
              {{app.metricsAmountHuman}} / {{app.checksAmountHuman}}
              {{#if app.triggeredChecks.length}}
                <span class="label label-danger">{{app.triggeredChecks.length}} triggered</span>
              {{/if}}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {{else}}
    <div>&nbsp;</div>
    <h1 class="text-center">
      You don't track any app yet, {{#link-to "apps.new"}}register one{{/link-to}}.
    </h1>
  {{/each}}
</div>
