<form class="form-horizontal">
  <div class="form-group">
    <label for="hgName" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-6">
      {{input value=hgName placeholder="for example 'Amount of Users'" id="hgName" class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="hgMetricName" class="col-sm-2 control-label">HG Metric Name</label>
    <div class="col-sm-6">
      {{input value=hgMetricName placeholder="for example 'apps.facebook.users'" id="hgMetricName" class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="hgKind" class="col-sm-2 control-label">Metric Kind</label>
    <div class="col-sm-6">
      {{view "select" content=hgKinds value=hgKind classNames="ember-select form-control"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" {{action "hgSubmit"}} {{bind-attr class=":btn :btn-info hgFormValid::disabled"}}>Save{{#if hgSaving}} ...{{/if}}</button>
    </div>
  </div>
</form>
