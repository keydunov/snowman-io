<table class="table table-striped">
  <tbody>
    <tr>
      <th colspan="2">Requests</th>
    </tr>
    <tr>
      <td>
        <b>Today</b><br>
        {{#if app.requests.today}}{{app.requests.today.count}}{{else}}-{{/if}}
      </td>
      <td class="yesterday">
        <b>Yesterday</b><br>
        {{#if app.requests.yesterday}}{{app.requests.yesterday.count}}{{else}}-{{/if}}
      </td>
    </tr>
    <tr>
      <td colspan="2">
        {{app.metricsAmountHuman}} / {{app.checksAmountHuman}}
        {{#if app.triggeredChecks}}
          <span class="label label-danger">{{app.triggeredChecks.length}} triggered</span>
        {{/if}}
      </td>
    </tr>
  </tbody>
</table>
