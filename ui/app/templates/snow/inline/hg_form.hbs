<p>
  <b>Hosted Graphite Metrics:</b> {{statusText}}
  <a href="#" {{action "change"}} {{bind-attr class="saving:hidden"}}>
    <span class="glyphicon glyphicon-pencil"></span>
  </a>
</p>

{{#if show}}
  <div class="well">
    <div class="form-group">
      <div class="btn-group">
        <a href="#" {{action "selectDisabled"}} {{bind-attr class=":btn :btn-default isHgDisabled:active"}}>Disabled</a>
        <a href="#" {{action "selectEnabled"}} {{bind-attr class=":btn :btn-default isHgDisabled::active"}}>Enabled</a>
      </div>
    </div>
    <div {{bind-attr class=":form-group isHgDisabled:hidden"}}>
      <label for="hgFormKey">HG Key</label>
      {{input value=hgFormKey placeholder="/xxxxxxxx/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" id="hgFormKey" class="form-control"}}
    </div>

    <div class="form-group">
      <a href="#" {{action "save"}} {{bind-attr class=":btn :btn-info isHgFormValid::disabled"}}>Save</a>
      <a href="#" {{action "cancel"}} class="btn btn-link">Cancel</a>
    </div>
  </div>
{{/if}}

