<ol class="breadcrumb">
  <li class="active">Checks</li>
</ol>

<div class="table-responsive">
<table class="table">
  <tr>
    <th>Key</th>
    <th>Positive/Failed</th>
    <th>Status</th>
    <th>Last Check</th>
    <th>Context</th>
    <th>Action</th>
  </tr>

  {{#each check in model itemController="check"}}
    <tr {{bind-attr class="check.isFailed:danger"}}>
      <td>{{#link-to "check" check}}{{check.id}}{{/link-to}}</td>
      <td>{{check.positive_count}}/{{check.fail_count}}</td>
      <td>
        <span {{bind-attr class=":label check.isFailed:label-danger:label-success"}}>{{check.status}}</span>
      </td>
      <td>
        <span {{bind-attr title=check.last_check_at}}>{{check.last_check_at_human}}</span>
      </td>
      <td>
        {{#each kv in check.lastCheckContext}}
          <div><em>{{kv.key}}:</em> {{kv.value}}</div>
        {{/each}}
      </td>
      <td>
        {{#if check.isFailed}}
          <a href="#" {{bind-attr class=":btn :btn-xs :btn-primary resolveInProgress:disabled"}} {{action 'resolve'}}>Resolve</a>
        {{/if}}
      </td>
    </tr>
  {{/each}}
</table>
</div>
