<div class="table-responsive">
<table class="table">
  <tr>
    <th>Key</th>
    <th>Count</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  {{#each check in model}}
    <tr {{bind-attr class="check.isFailed:danger"}}>
      <td>{{#link-to "check" check}}{{check.id}}{{/link-to}}</td>
      <td>{{check.count}}</td>
      <td>
        <span {{bind-attr class=":label check.isFailed:label-danger:label-success"}}>{{check.status}}</span>
      </td>
      <td>
        {{#if check.isFailed}}
          <a href="#" class="btn btn-sm btn-primary">Resolve</a>
        {{/if}}
      </td>
    </tr>
  {{/each}}
</table>
</div>
